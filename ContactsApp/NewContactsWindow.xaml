<Window x:Class="ContactsApp.NewContactsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactsApp"
        mc:Ignorable="d"
        Title="Add New Contact" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="txtName" Margin="0,0,0,5"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPhone" Margin="0,0,0,5"/>
            <Button Content="Save" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
